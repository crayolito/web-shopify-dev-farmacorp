<script>
    document.addEventListener("DOMContentLoaded", () => {
        let arrow = document.querySelector("#arrowBtn");

        arrow.onclick = function (e) {
            window.scroll(2, findPosition(document.getElementById("tips")));
        };
        function findPosition(obj) {
            var currenttop = 0;
            if (obj.offsetParent) {
                do {
                    currenttop += obj.offsetTop;
                } while ((obj = obj.offsetParent));
                return [currenttop];
            }
        }
    });
</script>

